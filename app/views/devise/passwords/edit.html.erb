<h3>Change Password</h3>
<div class="well col-md-10">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), 
                         :html => { :method => :put , :class => 'form-horizontal' }) do |f| %>
    <% if resource.errors.present? %>
      <div class="alert alert-warning">
        <p> <%= devise_error_messages! %></p>
      </div>
    <% end %>
    <%= f.hidden_field :reset_password_token %>
  
    <div class="form-group">
      <%= f.label  :password, class: 'col-sm-offset-2 col-md-2 col-sm-2 control-label' %>
      <div class="col-sm-offset-0 col-md-4 col-sm-4">
        <%= f.password_field :password, :autofocus => true, class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label  :password_confirmation, class: 'col-sm-offset-2 col-md-2 col-sm-2 control-label' %>
      <div class="col-sm-offset-0 col-md-4 col-sm-4">
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>

    <div class="row form-footer">
      <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit "Change my password", class: 'btn btn-focus' %></div>
      </div>
    </div>
  <% end %>
</div>
