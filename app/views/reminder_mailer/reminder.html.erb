
<div style="font-family:arial, sans-serif;" leftmargin="10" topmargin="0" rightmargin="10" bottommargin="10" marginheight="10" marginwidth="10">
<table width="500" align="left"><tr><td>
  <h1 style="font-weight: 700, font-size: 35px; letter-spacing: 1px; color: #222;">FOREKAST</h1>
  <p>
    <a href="<%=url_for(controller: 'home', action: 'index', only_path: false)%>events/show/<%=@event.id.to_s%>"><%=@event.name%></a>
  </p>
  <p><%=@event.get_local_datetime(@reminder.recipient_time_zone).to_time.strftime("%A, %b %e, %l:%M %p")%>
  <% if @reminder.reminder_time.present? %>
    (in <%=@reminder.reminder_time%>)
  <% end %>
  </p>
  <% if @event.image.present? %>
    <img src="<%=@event.image.url(:medium)%>" />
  <% end %>
</td></tr></table>
</div>

<style type="text/css">
  *,a,h1,h2,h3,h4,ul,li,strong,p {
    font-family: arial, 'sans-serif';
    font-size: 13px;
    line-height: 14px;
  }
  p { margin: 0 0 14px 0; padding: 0; }
</style>
